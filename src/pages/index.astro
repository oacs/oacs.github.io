---
import Layout from "../layouts/Layout.astro";
import RssBadge from "../components/RssBadge.astro";
import LinkedinIcon from "../assets/linkedin-logo.svg";
import GmailIcon from "../assets/gmail-logo.svg";
import WipIcon from "../assets/wip.svg";
---

<Layout title="Welcome to Astro.">
  <main class="m-auto max-w-[80ch] p-5">
    <h1 class="m-0 mb-4 text-5xl font-extrabold text-white">
      Welcome to <span class="text-gradient">OACS</span>.github Page
    </h1>
    <div
      class="flex h-24 flex-row items-center rounded-md border-t-8 border-t-yellow-500 bg-yellow-100 p-3 md:h-20"
    >
      <div
        class="flex h-fit w-fit items-center rounded-full border-4 border-yellow-300 bg-yellow-200"
      >
        <img
          src={WipIcon}
          class="md:w relative bottom-[0.1rem] m-2 w-14 md:w-6 lg:m-1"
          alt="Warning Sign"
          srcset=""
        />
      </div>
      <div class="px-4">
        <h3 class="text-l pb-1 font-bold text-yellow-800">Work in progress</h3>
        <p class="text-sm font-bold text-yellow-600">
          This page is under construction, don't worry it will be over soon!
        </p>
      </div>
    </div>
    <h2 class="text-4xl font-extrabold text-white">
      If you want to reach out:
    </h2>
    <ul role="list" class="mt-6 grid grid-cols-3 gap-x-4 gap-y-2">
      <RssBadge
        url="https://oacs.github.io"
        profileImg="/assets/oacs.png"
        logoImg="/assets/github-logo.svg"
        color="slate"
      >
        <span class="font-mono text-3xl font-bold text-white">OACS</span>
      </RssBadge>
      <RssBadge
        url="https://linkedin.com/in/oscar-castillejo"
        logoImg={LinkedinIcon}
        profileImg="/assets/linkedin-profile.jpg"
        color="sky"
      >
        <span class="font-mono text-2xl font-bold text-white">OscarC</span>
      </RssBadge>
      <RssBadge
        url="mailto:oscar.castillejo.sa@gmail.com,oacs1221@gmail.com"
        logoImg={GmailIcon}
        profileImg="/assets/gmail-profile.jpeg"
        color="red"
      >
        <span class="font-mono text-2xl font-bold text-white">Mail</span>
      </RssBadge>
    </ul>
  </main>
</Layout>

<style>
  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }
</style>
