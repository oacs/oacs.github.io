---
export interface Props {
  username: string;
  logoImg: string;
  profileImg: string;
  url: (username: string) => string;
  color: string;
}

const { username, url, logoImg, profileImg, color } = Astro.props;

const cardClass = `group w-full cursor-pointer rounded-lg bg-${color}-400 transition-all hover:bg-${color}-500`;
---

<div class={cardClass}>
  <a href={url?.(username)} class="border-1 border-transparent">
    <div>
      <div class="mt-6 flex h-8 flex-col items-end pl-6 group-hover:bg-white">
        <span
          class="animate group-hover:text-${color}-500 mr-auto text-center text-3xl font-bold uppercase leading-7 text-white transition-all duration-300"
        >
          {username}
        </span>
        <img
          src={profileImg}
          class="group-hover:w-27 group-hover:h-27 relative -top-[4rem] -right-4 w-24 rounded-full object-cover shadow-lg transition-all duration-300 ease-in-out group-hover:-top-[3.8rem]"
          alt={`${username}Github profile picture `}
        />
      </div>
    </div>
    <div class="overflow-clip pt-4">
      <img
        class="relative -bottom-2 right-2 h-28 opacity-70 group-hover:opacity-90"
        src={logoImg}
        alt="Github Logo"
      />
    </div>
  </a>
</div>
